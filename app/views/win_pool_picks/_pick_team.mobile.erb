<div class="ui-corner-all custom-corners">
  <div class="ui-bar ui-bar-b">
    <h3>Win Pool Draft</h3>
  </div>
  <div class="ui-body ui-body-b">
    <% if @is_my_pick %>
        <h3>You are up!</h3>
        <h3>Pick #<%= @current_pick %></h3>
    <% else %>
        <h3>It is not your turn to pick.</h3>
    <% end %>
    <%= form_tag({controller: :win_pool_picks, action: :pick_team}, method: "get", class: "nifty_form") do %>
        <%= select_tag "teams", options_from_collection_for_select(@teams, "id", "name"), :class => "win-pool-select" %>
        <%= submit_tag "Submit", data: { confirm: "Are you sure?" }, :disabled => !@is_my_pick, :class => "win-pool-button" %>
    <% end %>
  </div>
</div>