<div class="mod-container mod-no-header-footer mod-page-header">
	<div class="mod-content">
		<div class="dates">
			<%= Time.now.in_time_zone('Eastern Time (US & Canada)').strftime("%B %d, %Y") %>
		</div>
		<div class="select-dates">
            <div>
				<div class="select-year">Year:</div>
                <%= select_tag("year", "<option>2016</option><option>2015</option><option>2014</option><option>2013</option><option>2012</option><option>2011</option>".html_safe, :onchange => "change_fooicide_url(this.value)") %>
			</div>
			<div class="week">
				<div class="week-caption">Week:</div>
				<%= render :partial => "fooicide_picks/weeks" %>
			</div>
			<div class="bye-week">
				<div class="teams">
                  <% if @bye_teams %>
                      <%= "Bye: #{@bye_teams}" %>
                  <% end %>
				</div>
			</div>
            <div class="rules">
              <%= link_to 'Rules', '/fooicide/rules' %>
            </div>
		</div>
	</div>
</div>