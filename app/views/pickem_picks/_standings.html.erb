<div class="standings-wrapper">
	<h3>Standings</h3>
	<div class="standings-table-wrapper">
		<div class="table-scroll">
			<table>
				<thead>
					<tr>
						<th><span class="text">User</span></th>
						<th><span class="th-record">Week</span></th>
						<th><span class="th-record">Overall</span></th>
                        <th><span class="th-record">Balance</span></th>
                        <th><span class="th-record">Pick(s) Submitted</span></th>
					</tr>
				</thead>
				<tbody>
					<% @users.map do |user| %>
						<tr>
                            <% if user.name.nil? %>
							    <td class="td-name"><%= user.email %></td>
                            <% else %>
                                <td class="td-name"><%= user.name %></td>
                            <% end %>
							<td class="td-record"><%= user.pickem_picks_record_by_year_and_week(@year, @week) %></td>
							<td class="td-record"><%= user.pickem_picks_record_by_year(@year) %></td>
                            <td class="td-record"><%= user.find_balance_by_year(@year) %></td>
                            <% if user.pickem_picks_submitted?(@year, @week) %>
                                <td class="td-record">&#x2713;</td>
                            <% else %>
                                <td class="td-record"><%= "--" %></td>
                            <% end %>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
