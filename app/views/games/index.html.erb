<h1>Listing games</h1>

<table>
  <tr>
    <th>Year</th>
    <th>Week</th>
    <th>Away Team</th>
    <th>Home Team</th>
    <th>Away score</th>
    <th>Home score</th>
    <th>Date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.year %></td>
    <td><%= game.week %></td>
    <td><%= game.away_team.try(:location) %></td>
    <td><%= game.home_team.try(:location) %></td>
    <td><%= game.away_score %></td>
    <td><%= game.home_score %></td>
    <td><%= game.date %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

